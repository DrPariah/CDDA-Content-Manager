{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Tool",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "include_properties": [
        { "property": "magazines", "propertyOrder": 150 }
    ],
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "id",
        "type",
        "category",
        "name",
        "description",
        "weight",
        "volume",
        "price",
        "to_hit",
        "bashing",
        "material",
        "symbol",
        "color",
        "explode_in_fire",
        "explosion",
        "use_action",
        "flags"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "propertyOrder": 11,
          "default": "TOOL"
        },
        "name": {
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "category": {
          "$ref": "#/definitions/category"
        },
        "description": {
          "$ref": "#/definitions/description", 
          "propertyOrder": 13
        },
        "copy-from": {
            "type": "string",
            "filteredEnum": {
                "display_key": "id",
                "filter": { 
                    "$or": [
                        { "jsonObject.type": { "$eq": "TOOL" } },
                        { "jsonObject.abstract": { "$eq": "fake_item" } }
                    ]
                }
            },
            "enum": [ ]
        },
        "weight": {
          "$ref": "#/definitions/weight", 
          "propertyOrder": 13
        },
        "volume": {
          "$ref": "#/definitions/volume", 
          "propertyOrder": 13
        },
        "material": {
          "$ref": "#/definitions/material",
          "propertyOrder": 13
        },
        "symbol": {
          "$ref": "#/definitions/symbol", 
          "propertyOrder": 13
        },
        "price": {
          "$ref": "#/definitions/price", 
          "propertyOrder": 13
        },
        "to_hit": {
          "$ref": "#/definitions/to_hit", 
          "propertyOrder": 13
        },
        "bashing": {
          "$ref": "#/definitions/bashing", 
          "propertyOrder": 13
        },
        "color": {
          "$ref": "#/definitions/color", 
          "propertyOrder": 13
        },
        "explode_in_fire": {
            "type": "boolean",
            "id": "/properties/explode_in_fire",
            "title": "Explode In Fire",
            "format": "checkbox",
            "default": true,
            "description": "A description for 'explode_in_fire'  Type: 'boolean'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 140
        },
        "initial_charges": {
            "type": "integer",
            "id": "properties/initial_charges",
            "title": "Initial charges",
            "default": 25,
            "description": "Charges when spawned",
            "options": {
                "hidden": false
            }
        },
        "cutting": {
          "$ref": "#/definitions/cutting", 
          "propertyOrder": 13
        },
        "explosion": {
            "type": "object",
            "id": "/properties/explosion",
            "title": "Explosion",
            "stringifyOptions": {
              "maxLength": 106
            },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "power",
                "//",
                "shrapnel"
            ],
            "properties": {
                "power": {
                    "type": "integer",
                    "id": "/properties/explosion/properties/power",
                    "title": "Power",
                    "default": 25000,
                    "description": "A description for 'power'  Type: 'integer'",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 10
                },
                "//": {
                    "type": "string",
                    "id": "/properties/explosion/properties///",
                    "title": "Title Root Explosion ",
                    "default": "Fire would burn away/degrade some of the ANFO before the detonator would trigger.",
                    "format": "text",
                    "description": "Description for '' Type: 'string' Path: '/properties/explosion/properties///'",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 20
                },
                "shrapnel": {
                    "type": "integer",
                    "id": "/properties/explosion/properties/shrapnel",
                    "title": "Shrapnel",
                    "default": 12600,
                    "description": "A description for 'shrapnel'  Type: 'integer'",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 30
                }
            },
            "propertyOrder": 150
        },
        "gunmod_data": {
            "type": "object",
            "id": "/properties/gunmod_data",
            "title": "Gunmod data",
            "default": [ [ "DEFAULT", "auto", 14 ] ],
            "stringifyOptions": {
              "maxLength": 106
            },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "location",
                "mod_targets"
            ],
            "properties": {
                "location": {
                    "id": "/properties/gunmod_data/location",
                    "$ref": "#/definitions/location", 
                    "propertyOrder": 13
                },
                "mod_targets": {
                    "id": "/properties/gunmod_data/mod_targets",
                    "$ref": "#/definitions/mod_targets", 
                    "propertyOrder": 13
                },
                "mode_modifier": {
                    "type": "array",
                    "id": "/properties/gunmod_data/mode_modifier",
                    "title": "Mode modifier",
                    "description": "The mode modifier this item provides",
                    "format": "table",
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false
                    },
                    "items": {
                        "type": "array",
                        "id": "/properties/gunmod_data/mode_modifier/oneof0",
                        "default": [ "DEFAULT", "auto", 14 ],
                        "title": "Quality",
                        "format": "tabs",
                        "options": {
                            "disable_collapse": true,
                            "disable_array_add": true,
                            "disable_array_delete": true,
                            "disable_array_reorder": true,
                            "disable_properties": true,
                            "collapsed": false,
                            "compact": true,
                            "hidden": false
                        },
                        "items": [
                            {
                                "type": "string",
                                "id": "/properties/gunmod_data/mode_modifier/oneof0",
                                "default": "DEFAULT",
                                "format": "text",
                                "enum": [ "DEFAULT", "REACH", "AUTO" ],
                                "options": {
                                  "hidden": false,
                                  "compact": true
                                }
                            },
                            {
                                "type": "string",
                                "id": "/properties/gunmod_data/mode_modifier/oneof1",
                                "default": "auto",
                                "format": "text",
                                "enum": [ "auto", "bayonet" ],
                                "options": {
                                  "hidden": false,
                                  "compact": true
                                }
                            },
                            {
                                "type": "integer",
                                "id": "/properties/gunmod_data/mode_modifier/oneof2",
                                "default": 1,
                                "options": {
                                  "hidden": false,
                                  "compact": true
                                }
                            },
                            {
                                "type": "array",
                                "id": "/properties/artifact_data/properties/effects_carried",
                                "format": "selectize",
                                "uniqueItems": true,
                                "options": {
                                    "disable_collapse": false,
                                    "disable_array_add": false,
                                    "disable_array_delete": false,
                                    "disable_array_reorder": true,
                                    "disable_properties": false,
                                    "collapsed": false,
                                    "hidden": false,
                                    "multiple": true,
                                    "compact": true
                                },
                                "items": {
                                    "type": "string",
                                    "enum": [ "MELEE", "REACH_ATTACK" ]
                                }
                            }
                        ]
                    },
                    "propertyOrder": 90
                }
            },
            "propertyOrder": 150
        },
        "extend": {
            "type": "object",
            "id": "/properties/extend",
            "description": "Modders can add an \"extends\" field to their definition to append entries to a list instead of overriding the entire list.",
            "title": "Extend",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "flags"
            ],
            "properties": {
                "flags": {
                    "type": "array",
                    "id": "/properties/extend/properties/flags",
                    "title": "Flags",
                    "format": "selectize",
                    "uniqueItems": true,
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false,
                        "multiple": true
                    },
                    "items": {
                        "type": "string",
                        "enum": [ "PUMP_RAIL_COMPATIBLE" ]
                    },
                    "propertyOrder": 60
                }
            }
        },
        "artifact_data": {
            "type": "object",
            "id": "/properties/artifact_data",
            "description": "Every item type can have optional artifact properties (which makes it an artifact)",
            "title": "Actifact data",
            "stringifyOptions": {
              "maxLength": 106
            },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "charge_type",
                "effects_carried"
            ],
            "properties": {
                "charge_type": {
                    "type": "string",
                    "id": "/properties/artifact_data/properties/charge_type",
                    "title": "Charge type",
                    "default": "ARTC_PAIN",
                    "format": "text",
                    "description": "(optional, default: ARTC_NULL) How the item is recharged. For this to work, the item needs to be a tool that consumes charges upon invocation and has non-zero max_charges. ",
                    "options": {
                        "hidden": false
                    },
                    "enum": [ 
                      "ARTC_NULL",
                      "ARTC_TIME",
                      "ARTC_PAIN",
                      "ARTC_HP",
                      "ARTC_FATIGUE",
                      "ARTC_PORTAL",
                      "ARTC_SOLAR"
                    ],
                    "propertyOrder": 20
                },
                "effects_carried": {
                    "type": "array",
                    "id": "/properties/artifact_data/properties/effects_carried",
                    "title": "effects carried",
                    "description": "(optional, default: empty list) Effects of the artifact when it's in the inventory (main inventory, wielded, or worn) of the player.",
                    "format": "selectize",
                    "uniqueItems": true,
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false,
                        "multiple": true
                    },
                    "items": {
                        "type": "string",
                        "$ref": "#/definitions/artifact_effects"
                    },
                    "propertyOrder": 60
                },
                "effects_worn": {
                    "type": "array",
                    "id": "/properties/artifact_data/properties/effects_worn",
                    "title": "effects carried",
                    "description": "(optional, default: empty list) Effects of the artifact when it's worn (it must be an armor item to be worn).",
                    "format": "selectize",
                    "uniqueItems": true,
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false,
                        "multiple": true
                    },
                    "items": {
                        "type": "string",
                        "$ref": "#/definitions/artifact_effects"
                    },
                    "propertyOrder": 60
                },
                "effects_wielded": {
                    "type": "array",
                    "id": "/properties/artifact_data/properties/effects_wielded",
                    "title": "effects carried",
                    "description": "(optional, default: empty list) Effects of the artifact when it's wielded.",
                    "format": "selectize",
                    "uniqueItems": true,
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false,
                        "multiple": true
                    },
                    "items": {
                        "type": "string",
                        "enum": [ 
                          "AEA_STORM",
                          "AEA_FIREBALL",
                          "AEA_ADRENALINE",
                          "AEA_MAP",
                          "AEA_BLOOD",
                          "AEA_FATIGUE",
                          "AEA_ACIDBALL",
                          "AEA_PULSE",
                          "AEA_HEAL",
                          "AEA_CONFUSED",
                          "AEA_ENTRANCE",
                          "AEA_BUGS",
                          "AEA_TELEPORT",
                          "AEA_LIGHT",
                          "AEA_GROWTH",
                          "AEA_HURTALL",
                          "AEA_FUN",
                          "AEA_SPLIT",
                          "AEA_RADIATION",
                          "AEA_PAIN",
                          "AEA_MUTATE",
                          "AEA_PARALYZE",
                          "AEA_FIRESTORM",
                          "AEA_ATTENTION",
                          "AEA_TELEGLOW",
                          "AEA_NOISE",
                          "AEA_SCREAM",
                          "AEA_DIM",
                          "AEA_FLASH",
                          "AEA_VOMIT",
                          "AEA_SHADOWS",
                          "AEA_STAMINA_EMPTY"
                        ]
                    },
                    "propertyOrder": 60
                },
                "effects_activated": {
                    "type": "array",
                    "id": "/properties/artifact_data/properties/effects_activated",
                    "title": "effects carried",
                    "description": "(optional, default: empty list) Effects of the artifact when it's activated (which require it to have a \"use_action\": \"ARTIFACT\" and it must have a non-zero max_charges value).",
                    "format": "selectize",
                    "uniqueItems": true,
                    "options": {
                        "disable_collapse": false,
                        "disable_array_add": false,
                        "disable_array_delete": false,
                        "disable_array_reorder": true,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false,
                        "multiple": true
                    },
                    "items": {
                        "type": "string",
                        "$ref": "#/definitions/artifact_effects"
                    },
                    "propertyOrder": 60
                }
            },
            "propertyOrder": 150
        },
        "magazine_well": {
          "$ref": "#/definitions/magazine_well"
        },
        "techniques": {
          "$ref": "#/definitions/techniques"
        },
        "use_action": {
          "$ref": "#/definitions/use_action",
          "stringifyOptions": {
            "maxLength": 117
          }
        },
        "ammo": {
            "title": "Ammo",
            "id": "/properties/ammo",
            "type": "string",
            "default": "460",
            "format": "text",
            "description": "Ammo types accepted for reloading", 
            "filteredEnum": {
                "display_key": "id",
                "filter": { "jsonObject.type": { "$eq": "ammunition_type" } }
            },
            "options": {
                "hidden": false
            }
        },
        "max_charges": {
            "type": "integer",
            "id": "/properties/max_charges",
            "title": "Max charges",
            "default": 100,
            "description": "Maximum charges tool can hold",
            "options": {
                "hidden": false
            },
            "propertyOrder": 30
        },
        "charges_per_use": {
            "type": "integer",
            "id": "/properties/charges_per_use",
            "title": "Charges per use",
            "default": 1,
            "description": "Charges consumed per tool use",
            "options": {
                "hidden": false
            },
            "propertyOrder": 30
        },
        "flags": {
            "type": "array",
            "id": "/properties/flags",
            "title": "Flags",
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "enum": [ 
                  "RADIO_MODABLE",
                  "RADIO_INVOKE_PROC",
                  "BOMB"
                ]
            },
            "propertyOrder": 60
        },
        "sub": {
            "type": "string",
            "id": "/properties/sub",
            "title": "Sub",
            "default": "hotplate",
            "format": "text",
            "description": "optional; this tool has the same functions as another tool",
            "options": {
                "hidden": false
            },
            "propertyOrder": 20
        },
        "qualities": {
            "type": "array",
            "id": "/properties/qualities",
            "title": "Qualities",
            "description": "The qualities this item provides",
            "format": "table",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "type": "array",
                "id": "/properties/qualities/oneof0",
                "default": [ "CUT", 1 ],
                "title": "Quality",
                "format": "tabs",
                "options": {
                    "disable_collapse": true,
                    "disable_array_add": true,
                    "disable_array_delete": true,
                    "disable_array_reorder": true,
                    "disable_properties": true,
                    "collapsed": false,
                    "compact": true,
                    "hidden": false
                },
                "items": [
                    {
                        "type": "string",
                        "id": "/properties/qualities/items/oneof0",
                        "default": "VISE",
                        "format": "text",
                        "filteredEnum": {
                            "display_key": "id",
                            "filter": { "jsonObject.type": { "$eq": "tool_quality" } }
                        },
                        "options": {
                          "hidden": false,
                          "compact": true
                        }
                    },
                    {
                        "type": "integer",
                        "id": "/properties/qualities/items/oneof1",
                        "default": 1,
                        "options": {
                          "hidden": false,
                          "compact": true
                        }
                    }
                ]
            },
            "propertyOrder": 90
        }
    },
    "definitions": {
        "artifact_effects": {
            "enum": [ 
                "AEP_STR_UP",
                "AEP_DEX_UP",
                "AEP_PER_UP",
                "AEP_INT_UP",
                "AEP_ALL_UP",
                "AEP_SPEED_UP",
                "AEP_IODINE",
                "AEP_SNAKES",
                "AEP_INVISIBLE",
                "AEP_CLAIRVOYANCE",
                "AEP_CLAIRVOYANCE_PLUS",
                "AEP_SUPER_CLAIRVOYANCE",
                "AEP_STEALTH",
                "AEP_EXTINGUISH",
                "AEP_GLOW",
                "AEP_PSYSHIELD",
                "AEP_RESIST_ELECTRICITY",
                "AEP_CARRY_MORE",
                "AEP_SAP_LIFE",
                "AEP_HUNGER",
                "AEP_THIRST",
                "AEP_SMOKE",
                "AEP_EVIL",
                "AEP_SCHIZO",
                "AEP_RADIOACTIVE",
                "AEP_MUTAGENIC",
                "AEP_ATTENTION",
                "AEP_STR_DOWN",
                "AEP_DEX_DOWN",
                "AEP_PER_DOWN",
                "AEP_INT_DOWN",
                "AEP_ALL_DOWN",
                "AEP_SPEED_DOWN",
                "AEP_FORCE_TELEPORT",
                "AEP_MOVEMENT_NOISE",
                "AEP_BAD_WEATHER",
                "AEP_SICK"
             ]
        },
        "yesno": {
            "default": "yes",
            "type": "string",
            "enum": [
                "yes",
                "no"
            ]
        }
    }
}