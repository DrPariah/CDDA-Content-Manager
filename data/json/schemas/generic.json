{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Generic",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "stringifyOptions": {
      "maxLength": 116
    },
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "type",
        "id",
        "name",
        "weight",
        "color",
        "spoils_in",
        "comestible_type",
        "symbol",
        "quench",
        "healthy",
        "calories",
        "description",
        "price",
        "material",
        "volume",
        "fun",
        "flags",
        "smoking_result",
        "vitamins"
    ],
    "properties": {
        "abstract": {
          "$ref": "#/definitions/abstract", 
          "propertyOrder": 1
        },
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "propertyOrder": 11,
          "default": "GENERIC"
        },
        "name": {
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "name_plural": {
          "title": "name_plural", 
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "description": {
          "$ref": "#/definitions/description", 
          "propertyOrder": 13
        },
        "bashing": {
          "$ref": "#/definitions/bashing", 
          "propertyOrder": 13
        },
        "cutting": {
          "$ref": "#/definitions/cutting", 
          "propertyOrder": 13
        },
        "to_hit": {
          "$ref": "#/definitions/to_hit", 
          "propertyOrder": 13
        },
        "category": {
          "$ref": "#/definitions/category"
        },
        "copy-from": {
            "type": "string",
            "filteredEnum": {
                "display_key": "id",
                "format": "selectize",
                "filter": { "$or": [
                    { "jsonObject.type": { "$eq": "COMESTIBLE" } },
                    { "jsonObject.type": { "$eq": "GENERIC" } }
                ] }
            }
        },
        "proportional": {
          "$ref": "#/definitions/proportional"
        },
        "container": {
            "type": "string",
            "format": "selectize",
            "filteredEnum": {
                "display_key": "id",
                "filter": { "$or": [
                    { "jsonObject.type": { "$eq": "CONTAINER" } },
                    { "jsonObject.type": { "$eq": "GENERIC" } }
                ] }
            }
        },
        "looks_like": {
            "type": "string",
            "format": "selectize",
            "filteredEnum": {
                "display_key": "id",
                "filter": { "$and": [
                    { "$or": [
                        { "jsonObject.type": { "$eq": "AMMO" } },
                        { "jsonObject.type": { "$eq": "CONTAINER" } },
                        { "jsonObject.type": { "$eq": "GENERIC" } },
                        { "jsonObject.type": { "$eq": "TOOL" } }
                    ] },
                    { "$or": [
                        { "jsonObject.symbol": { "$exists": true } },
                        { "jsonObject.copy-from": { "$exists": true } }
                    ] }
                ] }
            }
        },
        "spoils_in": {
          "$ref": "#/definitions/spoils_in", 
          "propertyOrder": 13
        },
        "techniques": {
          "$ref": "#/definitions/techniques"
        },
        "qualities": {
          "$ref": "#/definitions/qualities"
        },
        "flags": {
            "$ref": "#/definitions/flags", 
            "items": {
                "enum": [ 
                    "MC_MOBILE",
                    "MC_USED",
                    "JAVELIN",
                    "USE_PART_ITEM",
                    "FIREWOOD",
                    "SHEATH_GOLF",
                    "MC_TURN_USED",
                    "MC_SCIENCE_STUFF",
                    "MC_ENCRYPTED",
                    "MC_RANDOM_STUFF",
                    "CAN_HAVE_CHARGES",
                    "CANNIBALISM",
                    "MC_MAY_BE_ENCRYPTED",
                    "SPEAR",
                    "STAB",
                    "SLEEP_AID",
                    "NO_REPAIR",
                    "UNRECOVERABLE",
                    "CONDUCTIVE",
                    "FAKE_SMOKE",
                    "FAKE_MILL",
                    "LEAK_ALWAYS",
                    "CORPSE",
                    "NO_UNLOAD",
                    "ALLOWS_REMOTE_USE",
                    "PERPETUAL",
                    "RADIOACTIVE",
                    "LEAK_DAM",
                    "TOBACCO",
                    "LITCIG",
                    "PSEUDO",
                    "BELT_CLIP",
                    "FIRESTARTER",
                    "FRAGILE_MELEE",
                    "ALWAYS_TWOHAND",
                    "SHEATH_SPEAR",
                    "REACH_ATTACK",
                    "SHEATH_SWORD",
                    "SHEATH_KNIFE",
                    "SHEATH_AXE",
                    "UNARMED_WEAPON",
                    "UNBREAKABLE_MELEE",
                    "TRADER_AVOID",
                    "DURABLE_MELEE",
                    "NONCONDUCTIVE",
                    "NO_UNWIELD",
                    "NO_SALVAGE",
                    "NO_DROP",
                    "NO_INGEST",
                    "EDIBLE_FROZEN",
                    "EATEN_COLD",
                    "HURT_WHEN_WIELDED",
                    "GRENADE",
                    "BOMB",
                    "RADIO_INVOKE_PROC",
                    "RADIO_MODABLE",
                    "WHIP",
                    "REACH3",
                    "LIGHT_4",
                    "LIGHT_10",
                    "LIGHT_15"
                ]
            },
            "propertyOrder": 60
        },
        "weight": {
          "$ref": "#/definitions/weight", 
          "propertyOrder": 13
        },
        "use_action": {
          "$ref": "#/definitions/use_action",
          "stringifyOptions": {
            "maxLength": 117
          }
        },
        "color": {
          "$ref": "#/definitions/color", 
          "propertyOrder": 13
        },
        "fuel": { "$ref": "#/definitions/fuel" },
        "stackable": {
            "type": "boolean",
            "id": "properties/stackable",
            "title": "Stackable",
            "format": "checkbox",
            "default": false,
            "description": "If true, this item is stackable",
            "options": {
                "hidden": false
            },
            "propertyOrder": 100
        },
        "comestible_type": {
            "type": "string",
            "id": "/properties/comestible_type",
            "title": "Comestible Type",
            "default": "FOOD",
            "format": "text",
            "description": "Comestible type, used for inventory sorting",
            "options": {
                "hidden": false
            },
            "propertyOrder": 70
        },
        "phase": {
            "type": "string",
            "id": "/properties/phase",
            "title": "Phase",
            "default": "solid",
            "format": "text",
            "description": "(Optional, default = \"solid\") What phase it is",
            "options": {
                "hidden": false
            }
        },
        "symbol": {
          "$ref": "#/definitions/symbol", 
          "propertyOrder": 13
        },
        "quench": {
          "$ref": "#/definitions/quench", 
          "propertyOrder": 13
        },
        "healthy": {
            "type": "integer",
            "title": "Healthy",
            "default": 1,
            "description": "How much it will affect your health.",
            "propertyOrder": 100
        },
        "calories": {"$ref": "#/definitions/calories"},
        "price": {
          "$ref": "#/definitions/price", 
          "propertyOrder": 13
        },
        "price_postapoc": {
          "$ref": "#/definitions/price_postapoc", 
          "propertyOrder": 13
        },
        "material": {
          "$ref": "#/definitions/material", 
          "propertyOrder": 13
        },
        "volume": {
          "$ref": "#/definitions/volume", 
          "propertyOrder": 140
        },
        "fun": {
          "$ref": "#/definitions/fun", 
          "propertyOrder": 140
        },
        "snippet_category": {
            "$ref": "#/definitions/snippet_category",
            "stringifyOptions": {
              "maxLength": 110
            }
        },
        "damage_states": {
            "type": "array",
            "id": "/properties/damage_states",
            "title": "Damage states",
            "default": [ 0, 0 ],
            "description": "The damage states of this item",
            "format": "grid",
            "options": {
                "disable_collapse": false,
                "disable_array_add": true,
                "disable_array_delete": true,
                "disable_array_reorder": true,
                "disable_properties": true,
                "collapsed": false,
                "hidden": false
            },
            "items": [
                {
                    "type": "integer",
                    "default": 0,
                    "options": { "compact": true }
                },
                {
                    "type": "integer",
                    "default": 0,
                    "options": { "compact": true }
                }
            ],
            "propertyOrder": 90
        },
        "book_data": {
            "type": "object",
            "id": "/definitions/armor_data",
            "title": "Book data",
            "description": "Every item (tool, gun, even food) can be used as book if it has book_data. Uses the same entries as for the book type",
            "default": { "martial_art": "style_wingchun" },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "martial_art"
            ],
            "properties": {
                "martial_art": {
                    "type": "string",
                    "id": "/properties/smoking_result",
                    "title": "Martial art",
                    "default": "style_wingchun",
                    "format": "text",
                    "description": "The martial art style you learn from this book",
                    "filteredEnum": {
                        "display_key": "id",
                        "filter": { "jsonObject.type": { "$eq": "martial_art" } }
                    },
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 180
                }
            },
            "propertyOrder": 150
        },
        "smoking_result": {
            "type": "string",
            "id": "/properties/smoking_result",
            "title": "Smoking Result",
            "default": "dry_fruit",
            "format": "text",
            "description": "Description for 'smoking_result' Type: 'string' Path: '/properties/smoking_result'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 180
        },
        "vitamins": {
          "$ref": "#/definitions/vitamins", 
          "propertyOrder": 190
        }
    }
}