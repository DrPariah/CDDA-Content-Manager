{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Monster attack",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "get_ids_of_type": [ { "type": "effect_type", "display_key": "id" } ],
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "type",
        "attack_type",
        "id",
        "cooldown",
        "move_cost",
        "damage_max_instance",
        "body_parts",
        "hit_dmg_u",
        "hit_dmg_npc",
        "no_dmg_msg_u",
        "no_dmg_msg_npc"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "default": "monster_attack",
          "propertyOrder": 11
        },
        "attack_type": {
            "type": "string",
            "id": "/properties/attack_type",
            "title": "Attack Type",
            "default": "melee",
            "format": "text",
            "description": "The type of attack",
            "options": {
                "hidden": false
            },
            "propertyOrder": 20
        },
        "cooldown": {
            "type": "integer",
            "id": "/properties/cooldown",
            "title": "Cooldown",
            "default": 20,
            "description": "A description for 'cooldown'  Type: 'integer'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 40
        },
        "move_cost": {
            "type": "integer",
            "id": "/properties/move_cost",
            "title": "Move Cost",
            "default": 150,
            "description": "A description for 'move_cost'  Type: 'integer'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 50
        },
        "damage_max_instance": {
            "type": "array",
            "id": "/properties/damage_max_instance",
            "title": "Damage Max Instance",
            "format": "tabs",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "type": "object",
                "id": "/properties/damage_max_instance/items",
                "title": "Instance",
                "options": {
                    "disable_collapse": false,
                    "disable_edit_json": false,
                    "disable_properties": false,
                    "collapsed": false,
                    "hidden": false
                },
                "defaultProperties": [
                    "damage_type",
                    "amount"
                ],
                "properties": {
                    "damage_type": {
                      "$ref": "#/definitions/damage_type", 
                      "propertyOrder": 11
                    },
                    "amount": {
                        "type": "integer",
                        "id": "/properties/damage_max_instance/items/properties/amount",
                        "title": "Amount",
                        "default": 8,
                        "description": "The amount",
                        "options": {
                            "hidden": false
                        },
                        "propertyOrder": 20
                    },
                    "armor_penetration": {
                        "type": "integer",
                        "id": "/properties/armor_penetration",
                        "title": "Armor Penetration",
                        "default": 150,
                        "description": "The armor penetration",
                        "options": {
                            "hidden": false
                        },
                        "propertyOrder": 50
                    },
                    "armor_multiplier": {
                        "type": "number",
                        "id": "/properties/armor_multiplier",
                        "title": "Armor Multiplier",
                        "default": 150,
                        "description": "The armor multiplier",
                        "options": {
                            "hidden": false
                        },
                        "propertyOrder": 50
                    }
                }
            },
            "propertyOrder": 60
        },
        "body_parts": {
            "type": "array",
            "id": "/properties/body_parts",
            "title": "Body Parts",
            "format": "tabs",
            "options": {
                "disable_collapse": false,
                "disable_array_add": true,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "enable_array_copy": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "headerTemplate": "Body Part {{i1}}",
                "type": "array",
                "id": "/properties/body_parts/oneof0",
                "title": "Body Part",
                "format": "tabs",
                "options": {
                    "disable_collapse": true,
                    "disable_array_add": true,
                    "disable_array_delete": true,
                    "disable_array_reorder": true,
                    "disable_properties": true,
                    "collapsed": false,
                    "hidden": false,
                    "compact": true,
                    "infoText": "the amount"
                },
                "items": [
                    {
                        "type": "string",
                        "id": "/properties/body_parts/items",
                        "title": "Body Part",
                        "default": "HEAD",
                        "options": {
                            "hidden": false,
                            "compact": true
                        },
                        "$ref": "#/definitions/body_parts_enum", 
                        "propertyOrder": 60
                    },
                    {
                        "type": "integer",
                        "id": "/properties/body_parts/items/oneof1",
                        "title": "Amount",
                        "default": 2,
                        "options": {
                            "hidden": false,
                            "compact": true, 
                            "infoText": "the amount"
                        }
                    }
                ]
            },
            "propertyOrder": 70
        },
        "effects": {
            "type": "array",
            "id": "/properties/effects",
            "title": "Effects",
            "format": "tabs",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "headerTemplate": "Effects {{i1}}",
                "type": "object",
                "id": "/properties/effects/oneof0",
                "title": "effect",
                "options": {
                    "disable_collapse": false,
                    "disable_edit_json": false,
                    "disable_properties": false,
                    "collapsed": false,
                    "hidden": false
                },
                "defaultProperties": [
                    "id"
                ],
                "properties": {
                    "id": {"$ref": "#/definitions/effect_type", "propertyOrder": 10 },
                    "duration": {
                        "type": "integer",
                        "id": "/properties/effects/items/properties/duration",
                        "title": "Duration",
                        "default": 100,
                        "description": "The duration of the effect",
                        "options": {
                            "hidden": false
                        },
                        "propertyOrder": 20
                    },
                    "bp": {
                        "type": "string",
                        "id": "/properties/effects/items/properties/bp",
                        "title": "Bp",
                        "default": "TORSO",
                        "format": "text",
                        "$ref": "#/definitions/body_parts_enum", 
                        "description": "The affected body part",
                        "options": {
                            "hidden": false
                        },
                        "propertyOrder": 30
                    }
                }
            },
            "propertyOrder": 80
        },
        "hit_dmg_u": {
            "type": "string",
            "id": "/properties/hit_dmg_u",
            "title": "Message on damage player (hit_dmg_u)",
            "default": "The %1$s claws at you!",
            "format": "text",
            "description": "The message to the user when the attack is aimed at the player",
            "options": {
                "hidden": false
            },
            "propertyOrder": 200
        },
        "hit_dmg_npc": {
            "type": "string",
            "id": "/properties/hit_dmg_npc",
            "title": "Message on damage NPC (hit_dmg_npc)",
            "default": "The %1$s claws at <npcname>!",
            "format": "text",
            "description": "The message to the user when the attack is aimed at a NPC",
            "options": {
                "hidden": false
            },
            "propertyOrder": 210
        },
        "no_dmg_msg_u": {
            "type": "string",
            "id": "/properties/no_dmg_msg_u",
            "title": "Message on miss player (no_dmg_msg_u)",
            "default": "The %1$s tries to claw at you, but fails to.",
            "format": "text",
            "description": "The message when the attack is aimed at the player but fails",
            "options": {
                "hidden": false
            },
            "propertyOrder": 220
        },
        "no_dmg_msg_npc": {
            "type": "string",
            "id": "/properties/no_dmg_msg_npc",
            "title": "Message on miss NPC (no_dmg_msg_npc)",
            "default": "The %1$s tries to claw <npcname>, but fails to.",
            "format": "text",
            "description": "The message when the attack is aimed at a NPC but fails",
            "options": {
                "hidden": false
            },
            "propertyOrder": 230
        }
    },
    "definitions": {
      "effect_type": {
        "type": "string", 
        "description": "The id of an effect_type entry", 
        "enum": [ "downed" ]
      }
    }
}