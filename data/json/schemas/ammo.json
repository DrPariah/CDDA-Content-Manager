{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Ammo",
    "type": "object",
    "id": "ammo",
    "get_ids_of_type": [ { "type": "CONTAINER", "display_key": "id" } ],
    "stringifyOptions": {
        "maxLength": 117
    },
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "id",
        "type",
        "name",
        "description",
        "weight",
        "volume",
        "price",
        "price_postapoc",
        "material",
        "symbol",
        "color",
        "count",
        "stack_size",
        "ammo_type",
        "casing",
        "range",
        "damage",
        "pierce",
        "dispersion",
        "recoil",
        "effects"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id",
          "propertyOrder": 1
        },
        "type": {
          "$ref": "#/definitions/type",
          "default": "AMMO",
          "propertyOrder": 2
        },
        "name": {
          "$ref": "#/definitions/name",
          "propertyOrder": 3
        },
        "name_plural": {
          "title": "name plural",
          "$ref": "#/definitions/name",
          "propertyOrder": 3
        },
        "description": {
          "$ref": "#/definitions/description",
          "propertyOrder": 4
        },
        "copy-from": {
            "type": "string",
            "format": "selectize",
            "filteredEnum": {
                "display_key": "id",
                "filter": { 
                    "$or": [
                        { "jsonObject.type": { "$eq": "AMMO" } },
                        { "jsonObject.type": { "$eq": "COMESTIBLE" } }
                    ]
                }
            }
        },
        "weight": {"$ref": "#/definitions/weight"},
        "volume": {"$ref": "#/definitions/volume"},
        "price": {"$ref": "#/definitions/price"},
        "price_postapoc": {"$ref": "#/definitions/price_postapoc"},
        "material": {"$ref": "#/definitions/material"},
        "symbol": {"$ref": "#/definitions/symbol"},
        "color": {"$ref": "#/definitions/color"},
        "count": {"$ref": "#/definitions/count"},
        "stack_size": {"$ref": "#/definitions/stack_size"},
        "ammo_type": {"$ref": "#/definitions/ammo_type"},
        "//": {
            "type": "string",
            "title": "Description",
            "default": "This is a comment",
            "format": "text",
            "description": "This is a comment that will only appear here but not in-game",
            "options": {
                "hidden": false
            }
        },
        "seed_data": {
          "$ref": "#/definitions/seed_data", 
          "propertyOrder": 13
        },
        "range": {
            "type": "integer",
            "id": "/properties/range",
            "title": "Range",
            "default": 14,
            "description": "The range of the ammo",
            "options": {
                "hidden": false
            }
        },
        "damage": {
            "type": "integer",
            "id": "/properties/damage",
            "title": "Damage",
            "default": 18,
            "description": "The damage it will deal.",
            "options": {
                "hidden": false
            }
        },
        "loudness": {"$ref": "#/definitions/loudness"},
        "prop_damage": {
            "type": "number",
            "id": "/properties/proportional/properties/prop_damage",
            "title": "Proportinal damage",
            "default": 0.46,
            "description": "Multiplies the damage of weapon by amount (overrides damage field)",
            "options": {
                "hidden": false
            }
        },
        "pierce": {
            "type": "integer",
            "id": "/properties/pierce",
            "title": "Pierce",
            "default": 20,
            "description": "The amount of piercing damage.",
            "options": {
                "hidden": false
            }
        },
        "dispersion": {
          "$ref": "#/definitions/dispersion"
        },
        "proportional": {
            "type": "object",
            "id": "/properties/proportional",
            "title": "Proportional",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "price",
                "damage",
                "recoil",
                "pierce",
                "dispersion"
            ],
            "properties": {
                "price": {"$ref": "#/definitions/price"},
                "damage": {
                    "type": "number",
                    "id": "/properties/proportional/properties/damage",
                    "title": "Damage",
                    "default": 0.46,
                    "description": "The amount of damage",
                    "options": {
                        "hidden": false
                    }
                },
                "recoil": {
                    "type": "number",
                    "id": "/properties/proportional/properties/recoil",
                    "title": "Recoil",
                    "default": 0.46,
                    "description": "The amount of Recoil",
                    "options": {
                        "hidden": false
                    }
                },
                "range": {
                    "type": "number",
                    "id": "/properties/proportional/properties/range",
                    "title": "Range",
                    "default": 0.1,
                    "description": "The amount of range",
                    "options": {
                        "hidden": false
                    }
                },
                "pierce": {
                    "type": "number",
                    "id": "/properties/proportional/properties/pierce",
                    "title": "Pierce",
                    "default": 0.1,
                    "description": "The amount of pierce",
                    "options": {
                        "hidden": false
                    }
                },
                "dispersion": {
                    "type": "number",
                    "id": "/properties/proportional/properties/dispersion",
                    "title": "Dispersion",
                    "default": 1.2,
                    "description": "The amount of dispersion",
                    "options": {
                        "hidden": false
                    }
                },    
                "loudness": {"$ref": "#/definitions/loudness"}
            }
        },
        "extend": {
            "type": "object",
            "id": "/properties/extend",
            "title": "Extend",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "effects"
            ],
            "properties": {
                "effects": { "$ref": "#/definitions/effects" }
            }
        },
        "delete": {
            "type": "object",
            "id": "/properties/delete",
            "title": "Delete",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "effects"
            ],
            "properties": {
                "effects": { "$ref": "#/definitions/effects" },
                "casing": { "$ref": "#/definitions/casing" }
            }
        },
        "category": {
          "$ref": "#/definitions/category"
        },
        "cutting": {
          "$ref": "#/definitions/cutting", 
          "propertyOrder": 13
        },
        "flags": {
            "$ref": "#/definitions/flags",
            "items": {
                "type": "string",
                "enum": [ 
                  "NOGIB", 
                  "TANGLE", 
                  "DROP_ACTION_ONLY_IF_LIQUID",
                  "PRIMITIVE_RANGED_WEAPON",
                  "TRADER_AVOID",
                  "NO_SALVAGE"
                ]
            },
            "propertyOrder": 60
        },
        "recoil": {
            "type": "integer",
            "id": "/properties/recoil",
            "title": "Recoil",
            "default": 90,
            "description": "The amount of recoil",
            "options": {
                "hidden": false
            }
        },
        "casing": { "$ref": "#/definitions/casing" },
        "phase": {
            "type": "string",
            "id": "/properties/phase",
            "title": "Phase",
            "default": "solid",
            "format": "text",
            "description": "(Optional, default = \"solid\") What phase it is",
            "options": {
                "hidden": false
            }
        },
        "effects": { "$ref": "#/definitions/effects" },
        "container": { "$ref": "#/definitions/CONTAINER" },
        "fuel": { "$ref": "#/definitions/fuel" },
        "looks_like": {
            "type": "string",
            "format": "selectize",
            "filteredEnum": {
                "display_key": "id",
                "filter": { "jsonObject.type": { "$eq": "AMMO" } }
            }
        },
        "relative": {
            "type": "object",
            "id": "/properties/relative",
            "title": "Relative",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "damage",
                "pierce"
            ],
            "properties": {
                "damage": {
                    "type": "integer",
                    "id": "/properties/relative/properties/damage",
                    "title": "Damage",
                    "default": -10,
                    "description": "The relative damage",
                    "options": {
                        "hidden": false
                    }
                },
                "range": {
                    "type": "integer",
                    "id": "/properties/relative/properties/range",
                    "title": "Range",
                    "default": 20,
                    "description": "The relative range",
                    "options": {
                        "hidden": false
                    }
                },
                "pierce": {
                    "type": "integer",
                    "id": "/properties/relative/properties/pierce",
                    "title": "Pierce",
                    "default": 20,
                    "description": "The relative piercing damage",
                    "options": {
                        "hidden": false
                    }
                }
            }
        },
        "bashing": {
          "$ref": "#/definitions/bashing", 
          "propertyOrder": 150
        },
        "explode_in_fire": {
            "type": "boolean",
            "id": "/properties/explode_in_fire",
            "title": "Explode In Fire",
            "format": "checkbox",
            "default": true,
            "options": {
                "hidden": false
            }
        },
        "explosion": {
            "type": "object",
            "id": "/properties/explosion",
            "title": "Explosion",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "power",
                "distance_factor",
                "shrapnel"
            ],
            "properties": {
                "power": {
                    "type": "integer",
                    "id": "/properties/explosion/properties/power",
                    "title": "Power",
                    "default": 24,
                    "description": "Power of the explosion",
                    "options": {
                        "hidden": false
                    }
                },
                "distance_factor": {
                    "type": "number",
                    "id": "/properties/explosion/properties/distance_factor",
                    "title": "Distance Factor",
                    "default": 0.6,
                    "description": "The distance factor",
                    "options": {
                        "hidden": false
                    }
                },
                "shrapnel": {
                    "type": "object",
                    "id": "/properties/explosion/properties/shrapnel",
                    "title": "Shrapnel",
                    "options": {
                        "disable_collapse": false,
                        "disable_edit_json": false,
                        "disable_properties": false,
                        "collapsed": false,
                        "hidden": false
                    },
                    "defaultProperties": [
                        "count",
                        "mass",
                        "recovery",
                        "drop"
                    ],
                    "properties": {
                        "count": {
                            "type": "integer",
                            "id": "/properties/explosion/properties/shrapnel/properties/count",
                            "title": "Count",
                            "default": 40,
                            "description": "The amount of schrapnel",
                            "options": {
                                "hidden": false
                            }
                        },
                        "mass": {
                            "type": "integer",
                            "id": "/properties/explosion/properties/shrapnel/properties/mass",
                            "title": "Mass",
                            "default": 5,
                            "description": "The mass of schrapnel",
                            "options": {
                                "hidden": false
                            }
                        },
                        "recovery": {
                            "type": "integer",
                            "id": "/properties/explosion/properties/shrapnel/properties/recovery",
                            "title": "Recovery",
                            "default": 100,
                            "description": "The recovery",
                            "options": {
                                "hidden": false
                            }
                        },
                        "drop": {
                            "type": "string",
                            "id": "/properties/explosion/properties/shrapnel/properties/drop",
                            "title": "Drop",
                            "default": "shrapnel",
                            "format": "text",
                            "description": "The drop",
                            "options": {
                                "hidden": false
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "effects": {
            "type": "array",
            "id": "/properties/effects",
            "title": "Effects",
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "enum": [ 
                    "ACIDBOMB", 
                    "BEANBAG", 
                    "BLACKPOWDER", 
                    "NON-FOULING", 
                    "BLINDS_EYES", 
                    "BOUNCE", 
                    "COOKOFF", 
                    "CUSTOM_EXPLOSION", 
                    "DRAW_AS_LINE", 
                    "EXPLOSIVE_BIG", 
                    "EXPLOSIVE_HUGE", 
                    "EXPLOSIVE ", 
                    "FLAME", 
                    "FLARE", 
                    "FLASHBANG", 
                    "FRAG", 
                    "INCENDIARY", 
                    "LARGE_BEANBAG", 
                    "LASER", 
                    "LIGHTNING", 
                    "MININUKE_MOD", 
                    "MUZZLE_SMOKE", 
                    "NAPALM", 
                    "NEVER_MISFIRES", 
                    "NOGIB", 
                    "TANGLE", 
                    "NO_EMBED", 
                    "NO_ITEM_DAMAGE", 
                    "PLASMA", 
                    "TANGLE", 
                    "RECOVER_[X]", 
                    "RECYCLED", 
                    "SHOT", 
                    "SMOKE_BIG", 
                    "TANGLE", 
                    "SMOKE", 
                    "STREAM_BIG", 
                    "STREAM", 
                    "TRAIL", 
                    "WIDE",
                    "STREAM_GAS_INSECTICIDAL",
                    "JET",
                    "RECOVER_5",
                    "RECOVER_6",
                    "RECOVER_15",
                    "RECOVER_40"
                ]
            }
        },
        "CONTAINER": {
            "type": "string",
            "format": "selectize",
            "enum": [ ]
        },
        "casing": {
            "type": "string",
            "id": "/properties/casing",
            "title": "Casing",
            "default": "46mm_casing",
            "format": "text",
            "description": "The casing it will drop.",
            "options": {
                "hidden": false
            }
        }
    }
}