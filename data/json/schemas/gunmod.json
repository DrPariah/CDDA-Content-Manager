{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Gunmod",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "get_ids_of_type": [ { "type": "AMMO", "display_key": "id" } ],
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "id",
        "type",
        "name",
        "description",
        "weight",
        "volume",
        "integral_volume",
        "price",
        "material",
        "symbol",
        "color",
        "location",
        "mod_targets",
        "acceptable_ammo",
        "dispersion_modifier",
        "ammo_modifier",
        "min_skills",
        "flags"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "propertyOrder": 11,
          "default": "GUNMOD"
        },
        "name": {
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "description": {
          "$ref": "#/definitions/description", 
          "propertyOrder": 13
        },
        "weight": {
          "$ref": "#/definitions/weight", 
          "propertyOrder": 13
        },
        "volume": {
          "$ref": "#/definitions/volume", 
          "propertyOrder": 13
        },
        "copy-from": {
            "type": "string",
            "enum": [ ]
        },
        "proportional": {
            "type": "object",
            "id": "/properties/proportional",
            "title": "Proportional",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "sight_dispersion"
            ],
            "properties": {
                "sight_dispersion": {
                    "type": "number",
                    "id": "/properties/proportional/properties/sight_dispersion",
                    "title": "Sight dispersion",
                    "default": 0.46,
                    "description": "Inaccuracy of gun derived from the sight mechanism",
                    "options": {
                        "hidden": false
                    }
                }
            }
        },
        "integral_volume": {
            "type": "integer",
            "id": "/properties/integral_volume",
            "title": "Integral Volume",
            "default": 0,
            "description": "Volume added to base item when item is integrated into another (eg. a gunmod integrated to a gun). Volume in ml and L can be used - \"50 ml\" or \"2 L\".",
            "options": {
                "hidden": false
            },
            "propertyOrder": 70
        },
        "price": {
          "$ref": "#/definitions/price", 
          "propertyOrder": 13
        },
        "material": {
          "$ref": "#/definitions/material", 
          "propertyOrder": 13
        },
        "symbol": {
          "$ref": "#/definitions/symbol", 
          "propertyOrder": 13
        },
        "color": {
          "$ref": "#/definitions/color", 
          "propertyOrder": 13
        },
        "location": {
          "$ref": "#/definitions/location", 
          "propertyOrder": 13
        },
        "mod_targets": {
          "$ref": "#/definitions/mod_targets", 
          "propertyOrder": 13
        },
        "min_skills": {
          "$ref": "#/definitions/min_skills", 
          "propertyOrder": 13
        },
        "integral_weight": {
          "title": "Integral weight",
          "$ref": "#/definitions/weight", 
          "description": "Weight added to base item when item is integrated into another (eg. a gunmod integrated to a gun)",
          "propertyOrder": 13
        },
        "acceptable_ammo": {
            "type": "array",
            "id": "/properties/acceptable_ammo",
            "title": "acceptable_ammo",
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "$ref": "#/definitions/AMMO"
            },
            "propertyOrder": 60
        },
        "ammo_modifier": {
            "type": "array",
            "id": "/properties/ammo_modifier",
            "title": "ammo_modifier",
            "description": "Optional field which if specified modifies parent gun to use these ammo types",
            "default": [ "9mm" ],
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "$ref": "#/definitions/AMMO"
            },
            "propertyOrder": 60
        },
        "gun_data": {
            "type": "object",
            "id": "/properties/gun_data",
            "title": "Gun Data",
            "stringifyOptions": {
                "maxLength": 100
            },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "ammo",
                "skill",
                "dispersion",
                "durability",
                "clip_size"
            ],
            "properties": {
                "ammo": {
                    "title": "Ammo",
                    "id": "/properties/ammo",
                    "type": "string",
                    "default": "460",
                    "format": "text",
                    "description": "Ammo types accepted for reloading", 
                    "filteredEnum": {
                        "display_key": "id",
                        "filter": { "jsonObject.type": { "$eq": "ammunition_type" } }
                    },
                    "options": {
                        "hidden": false
                    }
                },
                "skill": {
                    "type": "string",
                    "id": "/properties/skill",
                    "title": "Skill",
                    "default": "launcher",
                    "format": "text",
                    "description": "Skill used for firing",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 20
                },
                "dispersion": {
                  "$ref": "#/definitions/dispersion"
                },
                "durability": {
                    "type": "integer",
                    "id": "/properties/gun_data/properties/durability",
                    "title": "Durability",
                    "default": 10,
                    "description": "Resistance to damage/rusting, also determines misfire chance",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 40
                },
                "clip_size": {
                    "type": "integer",
                    "id": "/properties/gun_data/properties/clip_size",
                    "title": "Clip Size",
                    "default": 1,
                    "description": "Maximum amount of ammo that can be loaded",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 50
                }
            },
            "propertyOrder": 130
        },
        "dispersion_modifier": {
            "type": "integer",
            "id": "/properties/dispersion_modifier",
            "title": "Dispersion Modifier",
            "default": 15,
            "description": "Optional field increasing or decreasing base gun dispersion",
            "options": {
                "hidden": false
            },
            "propertyOrder": 150
        },
        "magazine_adaptor": {
            "type": "array",
            "title": "Magazine adaptor",
            "description": "Optional field which changes the types of magazines the parent gun accepts",
            "format": "table",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "type": "array",
                "default": [ "300blk", [ "stanag30" ] ],
                "title": "magazines",
                "format": "tabs",
                "options": {
                    "disable_collapse": true,
                    "disable_array_add": true,
                    "disable_array_delete": true,
                    "disable_array_reorder": true,
                    "disable_properties": true,
                    "collapsed": false,
                    "compact": true,
                    "hidden": false
                },
                "items": [
                    {
                        "type": "string",
                        "default": "DEFAULT",
                        "format": "text",
                        "filteredEnum": {
                            "display_key": "id",
                            "filter": { "jsonObject.type": { "$eq": "ammunition_type" } }
                        },
                        "options": { "compact": true }
                    },
                    {
                        "type": "array",
                        "title": "Magazine",
                        "format": "selectize",
                        "uniqueItems": true,
                        "options": {
                            "disable_collapse": false,
                            "disable_array_add": false,
                            "disable_array_delete": false,
                            "disable_array_reorder": true,
                            "disable_properties": false,
                            "collapsed": false,
                            "hidden": false,
                            "compact": true,
                            "multiple": true
                        },
                        "items": {
                            "type": "string",
                            "filteredEnum": {
                                "display_key": "id",
                                "filter": { "jsonObject.type": { "$eq": "MAGAZINE" } }
                            }
                        },
                        "propertyOrder": 60
                    }
                ]
            }
        },
        "install_time": {
            "type": "string",
            "id": "/properties/install_time",
            "title": "Install time",
            "default": "1 m",
            "format": "text",
            "description": "Optional time installation takes. Installation is instantaneous if unspecified. An integer will be read as moves or a time string can be used.",
            "propertyOrder": 120
        },
        "aim_speed": {
            "type": "integer",
            "title": "Aim speed",
            "default": 1,
            "description": "A measure of how quickly the player can aim, in moves per point of dispersion.",
            "propertyOrder": 30
        },
        "sight_dispersion": {
            "type": "integer",
            "title": "Dispersion Modifier",
            "default": 15,
            "description": "Inaccuracy of gun derived from the sight mechanism in quarter-degrees",
            "propertyOrder": 150
        },
        "delete": {
            "type": "object",
            "id": "/properties/delete",
            "title": "Delete",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "flags"
            ],
            "properties": {
                "flags": { 
                    "type": "array",
                    "id": "/properties/delete/properties/flags",
                    "$ref": "#/definitions/flags_ref" 
                }
            }
        },
        "flags": {
            "type": "array",
            "id": "/properties/flags",
            "$ref": "#/definitions/flags_ref" 
        }
    },
    "definitions": {
        "AMMO": {
          "type": "string", 
          "enum": [ ]
        },
        "flags_ref": {
            "type": "array",
            "id": "/properties/flags",
            "title": "Flags",
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "enum": [ 
                    "INSTALL_DIFFICULT",
                    "CONSUMABLE",
                    "RELOAD_ONE",
                    "ZOOM",
                    "NEVER_JAMS",
                    "RELOAD_EJECT",
                    "IRREMOVABLE",
                    "DISABLE_SIGHTS"
                ]
            },
            "propertyOrder": 60
        }
    }
}