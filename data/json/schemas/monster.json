            "items": {
                "type": "string",
                "id": "/properties/death_function/items",
                "title": "Death Function ",
                "default": "NORMAL",
                "format": "text",
                "description": "How the monster behaves on death. See JSON_FLAGS.md for a list of possible functions. One can add or remove entries in mods via 'add:death_function' and 'remove:death_function'.",
                "options": {
                    "hidden": false
                }
            },
            "propertyOrder": 300
        },
