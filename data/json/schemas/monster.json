{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Monster schema",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "stringifyOptions": {
      "maxLength": 130
    },
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "id",
        "type",
        "name",
        "description",
        "default_faction",
        "bodytype",
        "species",
        "looks_like",
        "volume",
        "weight",
        "hp",
        "speed",
        "material",
        "symbol",
        "color",
        "aggression",
        "morale",
        "melee_skill",
        "melee_dice",
        "melee_dice_sides",
        "melee_cut",
        "dodge",
        "armor_bash",
        "armor_cut",
        "vision_day",
        "vision_night",
        "harvest",
        "path_settings",
        "special_attacks",
        "death_function",
        "flags"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "propertyOrder": 11,
          "default": "MONSTER"
        },
        "name": {
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "description": {
          "$ref": "#/definitions/description", 
          "propertyOrder": 13
        },
        "material": {
          "$ref": "#/definitions/material", 
          "propertyOrder": 13
        },
        "weight": {
          "$ref": "#/definitions/weight", 
          "propertyOrder": 13
        },
        "volume": {
          "$ref": "#/definitions/volume", 
          "propertyOrder": 13
        },
        "default_faction": {
            "type": "string",
            "id": "/properties/default_faction",
            "title": "Default Faction",
            "default": "mi-go",
            "format": "text",
            "description": "The id of the faction the monster belongs to, this affects what other monsters it will fight. See Monster factions.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 50
        },
        "bodytype": {
            "type": "string",
            "id": "/properties/bodytype",
            "title": "Bodytype",
            "default": "migo",
            "format": "text",
            "description": "The id of the monster's bodytype, which is a general description of the layout of the monster's body.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 60
        },
        "species": {"$ref": "#/definitions/SPECIES", "propertyOrder": 90 },
        "looks_like": {
            "type": "string",
            "id": "/properties/looks_like",
            "title": "Looks Like",
            "default": "mon_mi_go",
            "format": "text",
            "description": "Description for 'looks_like' Type: 'string' Path: '/properties/looks_like'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 80
        },
        "hp": {
            "type": "integer",
            "id": "/properties/hp",
            "title": "Hp",
            "default": 240,
            "description": "Monster hit points.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 110
        },
        "speed": {
            "type": "integer",
            "id": "/properties/speed",
            "title": "Speed",
            "default": 120,
            "description": "A description for 'speed'  Type: 'integer'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 120
        },
        "symbol": {
            "type": "string",
            "id": "/properties/symbol",
            "title": "Symbol",
            "default": "&",
            "format": "text",
            "description": "Description for 'symbol' Type: 'string' Path: '/properties/symbol'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 140
        },
        "color": {
            "type": "string",
            "id": "/properties/color",
            "title": "Color",
            "default": "pink",
            "format": "text",
            "description": "Description for 'color' Type: 'string' Path: '/properties/color'",
            "options": {
                "hidden": false
            },
            "propertyOrder": 150
        },
        "aggression": {
            "type": "integer",
            "id": "/properties/aggression",
            "title": "Aggression",
            "default": 20,
            "description": "Defines how aggressive the monster is. Ranges from -99 (totally passive) to 100 (guaranteed hostility on detection)",
            "options": {
                "hidden": false
            },
            "propertyOrder": 160
        },
        "morale": {
            "type": "integer",
            "id": "/properties/morale",
            "title": "Morale",
            "default": 35,
            "description": "The monster morale",
            "options": {
                "hidden": false
            },
            "propertyOrder": 170
        },
        "melee_skill": {
            "type": "integer",
            "id": "/properties/melee_skill",
            "title": "Melee Skill",
            "default": 7,
            "description": "Monster melee skill, ranges from 0 - 10, with 4 being an average mob. See GAME_BALANCE.txt for more examples",
            "options": {
                "hidden": false
            },
            "propertyOrder": 180
        },
        "melee_dice": {
            "type": "integer",
            "id": "/properties/melee_dice",
            "title": "Melee Dice",
            "default": 4,
            "description": "Number of dices and their sides that are rolled on monster melee attack. This defines the amount of bash damage.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 190
        },
        "melee_dice_sides": {
            "type": "integer",
            "id": "/properties/melee_dice_sides",
            "title": "Melee Dice Sides",
            "default": 6,
            "description": "Number of dices and their sides that are rolled on monster melee attack. This defines the amount of bash damage.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 200
        },
        "melee_cut": {
            "type": "integer",
            "id": "/properties/melee_cut",
            "title": "Melee Cut",
            "default": 6,
            "description": "Amount of cutting damage added to die roll on monster melee attack.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 210
        },
        "dodge": {
            "type": "integer",
            "id": "/properties/dodge",
            "title": "Dodge",
            "default": 4,
            "description": "Monster dodge skill. See GAME_BALANCE.txt for an explanation of dodge mechanics.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 220
        },
        "armor_bash": {
            "type": "integer",
            "id": "/properties/armor_bash",
            "title": "Armor Bash",
            "default": 4,
            "description": "Monster protection from bashing damage.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 230
        },
        "armor_cut": {
            "type": "integer",
            "id": "/properties/armor_cut",
            "title": "Armor Cut",
            "default": 12,
            "description": "Monster protection from cutting damage.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 240
        },
        "vision_day": {
            "type": "integer",
            "id": "/properties/vision_day",
            "title": "Vision Day",
            "default": 50,
            "description": "Vision range in full daylight",
            "options": {
                "hidden": false
            },
            "propertyOrder": 250
        },
        "anger_triggers": {
            "type": "array",
            "id": "/properties/anger_triggers",
            "title": "Anger Triggers",
            "format": "tabs",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "headerTemplate": "Anger Triggers {{i1}}",
                "type": "string",
                "id": "/properties/anger_triggers/oneof0",
                "title": "Anger trigger",
                "default": "FRIEND_ATTACKED",
                "format": "text",
                "description": "What makes the monster angry. See JSON_FLAGS.md for a full list",
                "enum": [],
                "options": {
                    "hidden": false
                }
            },
            "propertyOrder": 320
        },
        "vision_night": {
            "type": "integer",
            "id": "/properties/vision_night",
            "title": "Vision Night",
            "default": 20,
            "description": "Vision range in total darkness.",
            "options": {
                "hidden": false
            },
            "propertyOrder": 260
        },
        "harvest": {
            "type": "string",
            "id": "/properties/harvest",
            "title": "Harvest",
            "default": "zombie_meatslug",
            "format": "text",
            "description": "An item that can be harvested from the corpse",
            "options": {
                "hidden": false
            },
            "propertyOrder": 270
        },
        "path_settings": {
            "type": "object",
            "id": "/properties/path_settings",
            "title": "Pathfinding Settings",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "defaultProperties": [
                "max_dist"
            ],
            "properties": {
                "max_dist": {
                    "type": "integer",
                    "id": "/properties/path_settings/properties/max_dist",
                    "title": "Max Dist",
                    "default": 50,
                    "description": "The maximum distance",
                    "options": {
                        "hidden": false
                    },
                    "propertyOrder": 10
                }
            },
            "propertyOrder": 280
        },
        "special_attacks": {
            "type": "array",
            "id": "/properties/special_attacks",
            "title": "Special Attacks",
