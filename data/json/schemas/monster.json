                        "options": {
                            "disable_collapse": false,
                            "disable_edit_json": false,
                            "disable_properties": false,
                            "collapsed": false,
                            "hidden": false
                        },
                        "defaultProperties": [
                            "id",
                            "damage_max_instance"
                        ],
                        "properties": {
                            "id": {
                                "type": "string",
                                "id": "/properties/special_attacks/items/properties/id",
                                "title": "Id",
                                "default": "scratch",
                                "format": "text",
                                "description": "The id of the attack (see JSON_FLAGS.md for a list)",
                                "options": {
                                    "hidden": false
                                },
                                "propertyOrder": 10
                            },
                            "type": {
                                "type": "string",
                                "id": "/properties/special_attacks/items/properties/type",
                                "title": "title",
                                "default": "scratch",
                                "format": "text",
                                "description": "The id of the attack (see JSON_FLAGS.md for a list)",
                                "options": {
                                    "hidden": false
                                },
                                "propertyOrder": 10
                            },
                            "cooldown": {
                                "type": "integer",
                                "id": "/properties/special_attacks/items/properties/cooldown",
                                "title": "cooldown",
                                "default": "1",
                                "format": "text",
                                "description": "The cooldown for that attack in amount of turns",
                                "options": {
                                    "hidden": false
                                },
                                "propertyOrder": 10
                            },
                            "damage_max_instance": {
                                "type": "array",
                                "id": "/properties/special_attacks/items/properties/damage_max_instance",
                                "title": "Damage Max Instance",
                                "format": "tabs",
                                "options": {
                                    "disable_collapse": false,
                                    "disable_array_add": false,
                                    "disable_array_delete": false,
                                    "disable_array_reorder": false,
                                    "disable_properties": false,
                                    "collapsed": false,
                                    "hidden": false
                                },
                                "items": {
                                    "type": "object",
                                    "id": "/properties/special_attacks/items/properties/damage_max_instance/items",
                                    "title": "Damage Max Instance ",
                                    "options": {
                                        "disable_collapse": false,
                                        "disable_edit_json": false,
                                        "disable_properties": false,
                                        "collapsed": false,
                                        "hidden": false
                                    },
                                    "defaultProperties": [
                                        "damage_type",
                                        "amount",
                                        "armor_multiplier"
                                    ],
                                    "properties": {
                                        "damage_type": {
                                            "type": "string",
                                            "id": "/properties/special_attacks/items/properties/damage_max_instance/items/properties/damage_type",
                                            "title": "Damage Type",
                                            "default": "cut",
                                            "format": "text",
                                            "description": "The damage type",
                                            "options": {
                                                "hidden": false
                                            },
                                            "propertyOrder": 10
                                        },
                                        "amount": {
                                            "type": "integer",
                                            "id": "/properties/special_attacks/items/properties/damage_max_instance/items/properties/amount",
                                            "title": "Amount",
                                            "default": 23,
                                            "description": "The amount of damage",
                                            "options": {
                                                "hidden": false
                                            },
                                            "propertyOrder": 20
                                        },
                                        "armor_multiplier": {
                                            "type": "number",
                                            "id": "/properties/special_attacks/items/properties/damage_max_instance/items/properties/armor_multiplier",
                                            "title": "Armor Multiplier",
                                            "default": 0.8,
                                            "description": "The armor multiplier",
                                            "options": {
                                                "hidden": false
                                            },
                                            "propertyOrder": 30
                                        }
                                    }
                                },
                                "propertyOrder": 20
                            }
                        }
                    }
                ]
            },
            "propertyOrder": 290
        },
        "death_function": {
            "type": "array",
            "id": "/properties/death_function",
            "title": "Death Function",
