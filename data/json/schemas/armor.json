{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": true,
    "title": "Armor",
    "type": "object",
    "id": "https://niebert.github.io/json-editor",
    "stringifyOptions": {
      "maxLength": 108
    },
    "get_ids_of_type": [ { "type": "material", "display_key": "ident" } ],
    "options": {
        "disable_collapse": false,
        "disable_edit_json": false,
        "disable_properties": false,
        "collapsed": false,
        "hidden": false
    },
    "defaultProperties": [
        "id",
        "type",
        "name",
        "description",
        "weight",
        "volume",
        "price",
        "bashing",
        "material",
        "symbol",
        "looks_like",
        "color",
        "covers",
        "coverage",
        "encumbrance",
        "material_thickness",
        "use_action",
        "flags"
    ],
    "properties": {
        "id": {
          "$ref": "#/definitions/id", 
          "propertyOrder": 10
        },
        "type": {
          "$ref": "#/definitions/type", 
          "propertyOrder": 11,
          "default": "ARMOR"
        },
        "name": {
          "$ref": "#/definitions/name", 
          "propertyOrder": 12
        },
        "description": {
          "$ref": "#/definitions/description", 
          "propertyOrder": 13
        },
        "category": {
          "$ref": "#/definitions/category"
        },
        "weight": {
          "$ref": "#/definitions/weight", 
          "propertyOrder": 13
        },
        "volume": {
          "$ref": "#/definitions/volume", 
          "propertyOrder": 13
        },
        "price": {
          "$ref": "#/definitions/price", 
          "propertyOrder": 13
        },
        "price_postapoc": {
          "$ref": "#/definitions/price_postapoc", 
          "propertyOrder": 13
        },
        "to_hit": {
          "$ref": "#/definitions/to_hit", 
          "propertyOrder": 13
        },
        "bashing": {
          "$ref": "#/definitions/bashing", 
          "propertyOrder": 13
        },
        "material": {
          "$ref": "#/definitions/material", 
          "propertyOrder": 13
        },
        "symbol": {
          "$ref": "#/definitions/symbol", 
          "propertyOrder": 13
        },
        "color": {
          "$ref": "#/definitions/color", 
          "propertyOrder": 13
        },
        "looks_like": {
            "type": "string",
            "format": "selectize",
            "enum": [ ]
        },
        "covers": {
          "$ref": "#/definitions/covers", 
          "propertyOrder": 13
        },
        "storage": {
          "$ref": "#/definitions/storage", 
          "propertyOrder": 13
        },
        "warmth": {
          "$ref": "#/definitions/warmth", 
          "propertyOrder": 13
        },
        "environmental_protection": {
          "$ref": "#/definitions/environmental_protection", 
          "propertyOrder": 13
        },
        "encumbrance": {
          "$ref": "#/definitions/encumbrance", 
          "propertyOrder": 13
        },
        "coverage": {
          "$ref": "#/definitions/coverage", 
          "propertyOrder": 13
        },
        "material_thickness": {
          "$ref": "#/definitions/material_thickness", 
          "propertyOrder": 13
        },
        "armor_data": {
          "$ref": "#/definitions/material_thickness", 
          "propertyOrder": 13
        },
        "copy-from": {
            "type": "string",
            "enum": [ ]
        },
        "use_action": {
          "$ref": "#/definitions/use_action",
          "stringifyOptions": {
            "maxLength": 117
          }
        },
        "valid_mods": {
            "type": "array",
            "id": "/properties/valid_mods",
            "title": "Valid Mods",
            "format": "tabs",
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": false,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false
            },
            "items": {
                "type": "string",
                "id": "/properties/valid_mods/items",
                "title": "Clothing Mod",
                "default": "steel_padded",
                "format": "text",
                "description": "The valid clothing mod applicable to this armor",
                "options": {
                    "hidden": false
                }
            },
            "propertyOrder": 200
        },
        "flags": {
            "type": "array",
            "id": "/properties/flags",
            "title": "Flags",
            "format": "selectize",
            "uniqueItems": true,
            "options": {
                "disable_collapse": false,
                "disable_array_add": false,
                "disable_array_delete": false,
                "disable_array_reorder": true,
                "disable_properties": false,
                "collapsed": false,
                "hidden": false,
                "multiple": true
            },
            "items": {
                "type": "string",
                "enum": [ 
                  "VARSIZE", 
                  "STURDY", 
                  "HELMET_COMPAT", 
                  "ELECTRIC_IMMUNE", 
                  "OUTER", 
                  "MAG_COMPACT", 
                  "SKINTIGHT", 
                  "OVERSIZE", 
                  "WATERPROOF", 
                  "POWERARMOR_COMPATIBLE", 
                  "ALARMCLOCK", 
                  "HOOD", 
                  "RAINPROOF", 
                  "RAD_RESIST", 
                  "FANCY", 
                  "POCKETS", 
                  "SUPER_FANCY", 
                  "COLLAR", 
                  "BELTED", 
                  "WATCH", 
                  "SUN_GLASSES", 
                  "ALLOWS_NATURAL_ATTACKS", 
                  "BLOCK_WHILE_WORN", 
                  "NO_QUICKDRAW", 
                  "WAIST", 
                  "DEAF", 
                  "GAS_PROOF", 
                  "FRAGILE", 
                  "FLOTATION", 
                  "FIRESTARTER", 
                  "FIX_NEARSIGHT", 
                  "FIX_FARSIGHT", 
                  "WATER_FRIENDLY"
                ]
            },
            "propertyOrder": 60
        }
    }
}